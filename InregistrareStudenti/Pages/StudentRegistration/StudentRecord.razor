@using InregistrareStudenti.Models
<tr>
    <td>@RecordIndex</td>
    <td>@User.FullName</td>
    <td>@User.Email</td>
    <td>@Spec.Name</td>
    <td>@Spec.Tax</td>
    <td>@Spec.Years</td>
    <td>@Student.RegisterDate</td>
    <td>
        <a href="javascript:void(0)" @onclick="(async () => await StudentDelete.InvokeAsync(Student))">
            <i class="oi oi-trash"></i>
        </a>
    </td>
</tr>

@code {
    [Parameter]
    public int RecordIndex { get; set; }

    [Parameter]
    public StudentRegistration Student { get; set; }

    [Parameter]
    public Specialization Spec { get; set; }

    [Parameter]
    public User User { get; set; }

    [Parameter]
    public EventCallback<StudentRegistration> StudentDelete { get; set; }
}
